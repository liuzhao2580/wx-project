.login-box {
    height: 200rpx;
    width: 100%;
    background: linear-gradient(to bottom,#ff5333,#bfe6ba);
    text-align: center;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}
.login-box .loginBtn{
    height: 120rpx;
    line-height: 120rpx;
    width: 120rpx;
    font-size: 28rpx;
    font-weight: 400;
    border-radius: 50%;
    background-color: #fff;
}
.login-box .userInfo-box>view {
    width: 120rpx;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.userInfo-box image{
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
    margin-bottom: 10rpx;
}