/* miniprogram/pages/tabbar/home/home.wxss */
.home-box {
    padding: 0 20rpx;
}
.recommand-hot {
    padding: 20rpx 0;
    position: relative;
}
.recommand-hot .more{
    position: absolute;
    right: 10rpx;
    top: 50%;
    transform: translateY(-50%);
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 12rpx;
    font-size: 28rpx;
    border: 2rpx solid #ccc;
    border-radius: 30rpx;
}

.recommend-song .recommend-content{
}
.recommend-content .box-head {
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 10rpx;
    border-bottom: 1rpx solid #c0c0c0;
}
.box-head .songer-name{
    font-size: 34rpx;
    color: #030303;
}
.box-head .more {
    height: 40rpx;
    line-height: 40rpx;
    border: 2rpx solid #ccc;
    padding: 0 12rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
}
.box-content .swiper-box{
    height: 480rpx;
}
.swiper-item .content-item{
    height: 120rpx;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
}
.content-item .item-image{
    height: 100rpx;
    width: 100rpx;
    border-radius: 10rpx;
}
.content-item .song {
    width: 70%;
    margin-left: 20rpx;
}
.song .song_name{
    font-size: 34rpx;
}
.song .songer_name{
    font-size: 24rpx;
    margin-top: 10rpx;
    color: #5c5c5c;
}
.content-item .iconfont{
    width: 10%;
    font-size: 50rpx;
    color: #ff5333;
    text-align: center;
}