/* pages/songSheet/songSheet.wxss */
.songSheet-box {
    /* position: relative; */
    /* height: auto; */
    padding: 0;
}
.scroll-box {
    width: 100%;
    height: 80rpx;
    overflow: hidden;
    white-space: nowrap;
    background-color: #fff;
    position: fixed;
    z-index: 99999;
}
.scroll-item {
    display: inline-block;
    height: 60rpx;
    line-height: 60rpx;
    width: 120rpx;
    text-align: center;
}
.scroll-item .item-text {
    padding: 0 10rpx 10rpx;
}
.scroll-item.active .item-text{
    border-bottom: 5rpx solid #ff5333;
}
.recommand-info {
    padding: 0 20rpx;
    margin-top: 80rpx;
    position: absolute;
}  