/* pages/songSheet/songSheet.wxss */
.songSheet-box {
    /* position: relative; */
    /* height: auto; */
    padding: 0;
}
.scroll-box {
    width: 100%;
    height: 80rpx;
    overflow: hidden;
    white-space: nowrap;
    background-color: #fff;
    position: fixed;
    z-index: 99999;
    border-bottom: 2rpx solid #eee;
}
.scroll-view {
    position: relative;
}
.scroll-item {
    display: inline-block;
    height: 60rpx;
    line-height: 60rpx;
    width: 120rpx;
    text-align: center;
    color: #3c3c3c;
}
.active-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60rpx;
    height: 5rpx;
    background-color: #ff5333;
    transition: all 0.3s;
    transform: translateX(50%);
}
.scroll-item.active{
    color: #ff5333;
}
.recommand-info {
    padding: 0 20rpx;
    margin-top: 80rpx;
    position: absolute;
}  