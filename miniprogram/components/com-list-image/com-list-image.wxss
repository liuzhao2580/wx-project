.recommand-image {
    height: 320rpx;
    position: relative
}
.recommand-image image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.recommand-image .play-info {
    font-size: 22rpx;
    color: #fff;
    position: absolute;
    top: 5rpx;
    right: 8rpx;
    height: 50rpx;
}
.play-info text:first-of-type {
    margin-right: 10rpx;
    font-size: 22rpx;
}