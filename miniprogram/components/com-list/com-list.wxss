.recommand-info {
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
}
.recommand-info::after{
    content: "";
    width: 30%;
}
.recommand-item {
    width: 30.3%;
    margin-bottom: 20rpx;
}
.recommand-item .recommand-text {
    font-size: 30rpx;
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}